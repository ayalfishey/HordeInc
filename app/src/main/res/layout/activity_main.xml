<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="1"-->
<!--            android:background="@drawable/glossy_button"-->

<!--            android:scaleX="1.7"-->
<!--            android:scaleY="6"-->
<!--             />-->
<!--        android:textSize="10sp"-->
